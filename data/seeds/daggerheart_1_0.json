    "metadata": {
      "character_sheet_schema": {
        "computed_stats": {
          "max_hp": {
            "formula": "trait_meta('Class', 'base_hp') + stat('level')",
            "depends_on": ["traits", "stats"]
          },
          "max_stress": {
            "formula": "trait_meta('Class', 'base_stress')",
            "depends_on": ["traits"]
          },
          "evasion": {
            "formula": "trait_meta('Class', 'base_evasion') + equipment_meta('armor', 'evasion_penalty')",
            "depends_on": ["traits", "equipment"]
          },
          "damage_threshold_major": {
            "formula": "equipment_meta('armor', 'base_thresholds.major') + stat('level')",
            "depends_on": ["equipment", "stats"]
          },
          "damage_threshold_severe": {
            "formula": "equipment_meta('armor', 'base_thresholds.severe') + stat('level')",
            "depends_on": ["equipment", "stats"]
          }
        }
      }
    }
